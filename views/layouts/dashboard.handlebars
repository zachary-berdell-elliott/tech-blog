<div class="row mt-4">
  <div class="col-md-6">
    <h2>Create New Blog Post:</h2>
      <form id="blog-form" class="form new-blog-form"> 
  <div class="form-group">
        <label for="blog-name">Title:</label>
        <input class="form-input" type="text" id="blog-name" name="title" />
        </div>
      <div class="form-group">
        <label for="blog-desc">Content:</label>
        <textarea class="form-input" id="blog-desc" name="content" rows="10" cols="20"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
      </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h2>Your Blog Posts:</h2>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h3><a href="/blog/{{blog.id}}">{{blog.title}}</a></h3>
      </div>
      <div class="row justify-center">
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger delete-blog" data-id="{{blog.id}}">DELETE</button>
      </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./profile.js"></script>