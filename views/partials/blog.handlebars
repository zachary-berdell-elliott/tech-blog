{{#if original_poster}}
<form class="text-center edit-blog-form" data-id="{{id}}">
  <input value="{{title}}" class="form-input" id="blog-name">
  <textarea class="form-input" id="blog-desc">{{content}}</textarea>
  <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Blog</button>
      </div>
  <p>Posted by {{user.name}} on {{format_date date_created}}</p>
</form>
{{else}}
<article class="text-center blog-content" data-id="{{id}}">
  <h2>{{title}}</h2>
  <p id="blog-desc">{{content}}</p>
  <p>Posted by {{user.name}} on {{format_date date_created}}</p>
</article>
{{/if}}


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="/get-comments.js"></script>
{{#if originalPoster}}
<script src="/js/editblog.js"></script>
{{/if}}