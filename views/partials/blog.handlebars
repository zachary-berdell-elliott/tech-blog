{{#if original_poster}}
<form id="blog-content" class="d-flex flex-column text-center edit-blog-form tb-site-container" data-id="{{id}}">
  <input value="{{title}}" class="form-input" id="blog-name">
  <textarea class="form-input" id="blog-desc">{{content}}</textarea>
  <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Blog</button>
      </div>
  <p>Posted by {{user.name}} on {{format_date date_created}}</p>
</form>
{{else}}
<article id="blog-content" class="text-center tb-site-container" data-id="{{id}}">
  <h2>{{title}}</h2>
  <p id="blog-desc">{{content}}</p>
  <p>Posted by {{user.name}} on {{format_date date_created}}</p>
</article>
{{/if}}
{{#if logged_in}}
<form class="d-flex flex-row justify-content-center tb-site-container" id="comment-creator">
  <div class="input-group">
    <label for="comment-entry">Leave a Comment:</label>
    <textarea id="comment-entry" type="text" name="comment" class="input-large form-control"></textarea>
  </div>
  <button class="comment-btn" type="submit">ADD COMMENT</button>
</form>
{{/if}}

<section id="comment-section" class="d-flex flex-column-reverse"></section>
  
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="../get-comments.js"></script>
{{#if logged_in}}
<script src="../add-comment.js"></script>
{{/if}}
{{#if original_poster}}
<script src="../edit-blog.js"></script>
{{/if}}