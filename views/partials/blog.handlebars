{{#if original_poster}}
<form id="blog-content" class="text-center edit-blog-form" data-id="{{id}}">
  <input value="{{title}}" class="form-input" id="blog-name">
  <textarea class="form-input" id="blog-desc">{{content}}</textarea>
  <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Blog</button>
      </div>
  <p>Posted by {{user.name}} on {{format_date date_created}}</p>
</form>
{{else}}
<article id="blog-content" class="text-center" data-id="{{id}}">
  <h2>{{title}}</h2>
  <p id="blog-desc">{{content}}</p>
  <p>Posted by {{user.name}} on {{format_date date_created}}</p>
</article>
{{/if}}
{{#if logged_in}}
<form class="col-md-6 justify-center" id="comment-creator">
  <label for="comment-entry">Leave a Comment:</label>
  <input id="comment-entry" type="text" name="comment" />
  <button class="comment-btn" type="submit">ADD COMMENT</button>
</form>
{{/if}}

{{#each comments as |comment|}}
<article class="comment-block">
  <span>{{comment.user.name}}</span>
  <span>{{format_date comment.date_created}}</span>
  <p>{{comment.commentContent}}</p>
</article>
{{/each}}
  
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="./get-comments.js"></script>
{{#if logged_in}}
<script src="./add-comment.js"></script>
{{/if}}
{{#if original_poster}}
<script src="./editblog.js"></script>
{{/if}}